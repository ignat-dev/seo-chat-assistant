{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 9090
    },
    "functions": {
      "port": 5005
    },
    "hosting": {
      "port": 5000
    },
    "singleProjectMode": true
  },
  "firestore": {
    "database": "(default)",
    "location": "eur3",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "codebase": "default",
      "source": "functions",
      "ignore": [
        "firebase-debug.log",
        "firebase-debug.*.log",
        "node_modules",
        ".git",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "site": "seo-chat-assistant",
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api",
        "auth": true,
        "region": "europe-west1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
